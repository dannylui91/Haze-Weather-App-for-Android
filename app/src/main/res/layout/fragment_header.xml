<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#30000000">
    
    <!-- FIRST BLOCK -->
    <LinearLayout
        android:id="@+id/day_one_bg"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/candyAppleOne">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50">
                <TextView
                    android:id="@+id/day_one_circle_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/circle"/>
            </FrameLayout>

            <TextView
                android:id="@+id/day_one_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#99FFFFFF"/>

        </LinearLayout>

    </LinearLayout>

    <!-- SECOND BLOCK -->
    <LinearLayout
        android:id="@+id/day_two_bg"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/candyAppleTwo">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50">
                <TextView
                    android:id="@+id/day_two_circle_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/circle"/>
            </FrameLayout>

            <TextView
                android:id="@+id/day_two_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#99FFFFFF"/>

        </LinearLayout>

    </LinearLayout>

    <!-- THIRD BLOCK -->
    <LinearLayout
        android:id="@+id/day_three_bg"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/candyAppleThree">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50">
                <TextView
                    android:id="@+id/day_three_circle_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
