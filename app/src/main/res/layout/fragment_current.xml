<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <View
            android:id="@+id/invisibile_divider"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"/>

        <!-- High Temp -->
        <RelativeLayout
            android:id="@+id/current_hi_view"
            android:layout_toLeftOf="@id/invisibile_divider"
            android:orientation="vertical"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_marginRight="50dp"
            android:textSize="15sp"
            android:background="@drawable/circle">
            <TextView
                android:id="@+id/high_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"
                android:text="40Â°"/>
            <TextView
                android:layout_below="@id/high_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="5dp"
                android:textSize="10sp"
                android:text="High"/>
        </RelativeLayout>
        <!-- Feel Temp -->

        <TextView
            android:id="@+id/current_feel_view"
            android:layout_toRightOf="@id/invisibile_divider"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:textColor="@color/primaryTextColor"
            android:fontFamily="sans-serif-light"
            android:text="feel"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:background="@drawable/circle"/>
        <!-- Current Temp -->
        <TextView
            android:id="@+id/current_temp_view"
            android:layout_below="@id/current_hi_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/primaryTextColor"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="10dp"
            android:textSize="50sp"
            android:text="50"
            android:background="@drawable/circle"/>
        <!-- Low Temp -->
        <TextView
            android:id="@+id/current_lo_view"
            android:layout_below="@id/current_temp_view"
            android:layout_toLeftOf="@id/invisibile_divider"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_marginRight="50dp"
            android:textColor="@color/primaryTextColor"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:text="lo"
            android:background="@drawable/circle"/>

        <!-- Rain Chance -->
        <TextView
            android:id="@+id/current_rain_chance_view"
            android:layout_below="@id/current_temp_view"
            android:layout_toRightOf="@id/invisibile_divider"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/primaryTextColor"
            android:fontFamily="sans-serif-light"
            android:text="rain"
            android:background="@drawable/circle"/>
        <!-- Wind Speed -->
        <TextView
            android:id="@+id/current_wind_view"
            android:layout_below="@id/current_feel_view"
            android:layout_toRightOf="@id/current_temp_view"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:textColor="@color/primaryTextColor"
            android:fontFamily="sans-serif-light"
            android:text="wind"
            android:background="@drawable/circle"/>
    </RelativeLayout>

</RelativeLayout>