<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <View
            android:id="@+id/invisibile_divider"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"/>

        <!-- High Temp -->
        <RelativeLayout
            android:id="@+id/current_hi_view"
            android:layout_toLeftOf="@id/invisibile_divider"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_marginRight="50dp"
            android:background="@drawable/circle">
            <TextView
                android:id="@+id/tv_hightemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"
                android:text="40°"/>
            <TextView
                android:layout_below="@id/tv_hightemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="5dp"
                android:textSize="10sp"
                android:text="High"/>
        </RelativeLayout>

        <!-- Feel Temp -->
        <RelativeLayout
            android:id="@+id/current_feel_view"
            android:layout_toRightOf="@id/invisibile_divider"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/circle">
            <TextView
                android:id="@+id/tv_feeltemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"
                android:text="40°"/>
            <TextView
                android:layout_below="@id/tv_feeltemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="5dp"
                android:textSize="10sp"
                android:text="Feels"/>
        </RelativeLayout>
        <!-- Current Temp -->
        <TextView
            android:id="@+id/current_temp_view"
            android:layout_below="@id/current_hi_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/primaryTextColor"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="10dp"
            android:textSize="50sp"
            android:text="50"
            android:background="@drawable/circle"/>

        <!-- Low Temp -->
        <RelativeLayout
            android:id="@+id/current_lo_view"
            android:layout_below="@id/current_temp_view"
            android:layout_toLeftOf="@id/invisibile_divider"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_marginRight="50dp"
            android:background="@drawable/circle">
            <TextView
                android:id="@+id/tv_lowtemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"
                android:text="40°"/>
            <TextView
                android:layout_below="@id/tv_lowtemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="5dp"
                android:textSize="10sp"
                android:text="Low"/>
        </RelativeLayout>

        <!-- Rain Chance -->
        <RelativeLayout
            android:id="@+id/current_rain_chance_view"
            android:layout_below="@id/current_temp_view"
            android:layout_toRightOf="@id/invisibile_divider"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle">
            <TextView
                android:id="@+id/tv_winddirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"
                android:text="40°"/>
        </RelativeLayout>

        <!-- Wind Speed -->
        <RelativeLayout
            android:id="@+id/current_wind_view"
            android:layout_below="@id/current_feel_view"
            android:layout_toRightOf="@id/current_temp_view"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:background="@drawable/circle">
            <TextView
                android:id="@+id/tv_windspeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"
                android:text="40°"/>
            <TextView
                android:layout_below="@id/tv_windspeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="5dp"
                android:textSize="10sp"
                android:text="mph"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>